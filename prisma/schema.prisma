generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String                @id @default(cuid())
  name          String?
  email         String                @unique
  password      String?
  image         String?
  createdAt     DateTime              @default(now()) @map("created_at")
  emailVerified Boolean               @default(false)

  storageUsedBytes BigInt             @default(0)

  conversations Conversation[]
  documents     Document[]
  projects      Project[]
  projectChats  ProjectConversation[]
  settings      Setting[]
  subscription  Subscription?
}

model OtpToken {
  id        String   @id @default(cuid())
  email     String
  token     String
  expiresAt DateTime
}

model Setting {
  id     String  @id @default(cuid())
  key    String
  value  String?
  userId String
  user   User    @relation(fields: [userId], references: [id])

  @@unique([userId, key])
}

model Project {
  id           String                @id @default(cuid())
  name         String
  description  String?
  createdAt    DateTime              @default(now()) @map("created_at")
  userId       String
  documents    Document[]
  user         User                  @relation(fields: [userId], references: [id])
  projectChats ProjectConversation[]

  @@unique([userId, name])
}

model Document {
  id            String         @id @default(cuid())
  filename      String?
  filePath      String?        @map("file_path")
  content       String?
  summary       String?
  status        String?        @default("pending")
  createdAt     DateTime       @default(now()) @map("created_at")
  starred       Int?           @default(0)
  userId        String
  projectId     String?
  selected      Int            @default(1)

  visibility    String         @default("private")
  
  chunks        Chunk[]
  conversations Conversation[]
  project       Project?       @relation(fields: [projectId], references: [id])
  user          User           @relation(fields: [userId], references: [id])
}

model Chunk {
  id         String   @id @default(cuid())
  chunkIndex Int?     @map("chunk_index")
  text       String?
  summary    String?
  embedding  Json?
  documentId String   @map("document_id")
  document   Document @relation(fields: [documentId], references: [id])
}

model Conversation {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now()) @map("created_at")
  userId     String
  documentId String?   @map("document_id")
  document   Document? @relation(fields: [documentId], references: [id])
  user       User      @relation(fields: [userId], references: [id])
  messages   Message[]
}

model Message {
  id             String       @id @default(cuid())
  role           String?
  content        String?
  status         String?      @default("done")
  createdAt      DateTime     @default(now()) @map("created_at")
  conversationId String       @map("conversation_id")
  conversation   Conversation @relation(fields: [conversationId], references: [id])
}

model ProjectConversation {
  id        String           @id @default(cuid())
  createdAt DateTime         @default(now()) @map("created_at")
  userId    String
  projectId String?          @map("project_id")
  project   Project?         @relation(fields: [projectId], references: [id])
  user      User             @relation(fields: [userId], references: [id])
  messages  ProjectMessage[]
}

model ProjectMessage {
  id             String              @id @default(cuid())
  role           String?
  content        String?
  status         String?             @default("done")
  createdAt      DateTime            @default(now()) @map("created_at")
  conversationId String              @map("conversation_id")
  conversation   ProjectConversation @relation(fields: [conversationId], references: [id])
}



// Subscription Extension

model Plan {
  id               String   @id @default(cuid())
  name             String   @unique
  description      String?
  storageLimitGb   Int      // e.g. 1, 3, 10
  priceCents       Int      @default(0)// e.g. 999 = $9.99
  currency         String   @default("USD")
  stripePriceId    String   @unique
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now()) @map("created_at")
  billingInterval  String   @default("month")

  subscriptions    Subscription[]
}



model Subscription {
  id                     String   @id @default(cuid())
  userId                 String   @unique
  planId                 String
  status                 String   // active, trialing, past_due, canceled
  stripeCustomerId       String
  stripeSubscriptionId   String
  currentPeriodEnd       DateTime?
  cancelAtPeriodEnd      Boolean  @default(false)
  createdAt              DateTime @default(now()) @map("created_at")
  updatedAt              DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  plan Plan @relation(fields: [planId], references: [id])
}
